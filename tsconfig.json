{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowJs": false,
    "target": "ESNext",
    "paths": {
      "@yao/*": [
        "./.vscode/types/*"
      ],
      "@lib/*": ["./scripts/lib/*"],
      "@scripts/*": [
        "./scripts/*"
      ]
    },
    "lib": ["ESNEXT", "DOM"],
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./scripts/**/*",
    "./services/**/*",
    "./studio/**/*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
