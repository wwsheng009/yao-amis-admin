{
  "type": "free", // default subscription type for new teams
  "role": "owner:free", // default user role for team creator (matches user registration role)
  "roles": [
    {
      "role_id": "owner:free",
      "label": "Owner",
      "description": "Team owner with full control over team resources and settings",
      "default": false,
      "hidden": true
    },
    {
      "role_id": "team:admin",
      "label": "Admin",
      "description": "Manage team members, assign roles, and configure team settings",
      "default": false,
      "hidden": false
    },
    {
      "role_id": "team:member",
      "label": "Member",
      "description": "Access team resources and collaborate with other team members",
      "default": true,
      "hidden": false
    }
  ],

  // AI Member (Robot) Configuration
  "robot": {
    "roles": ["team:member", "team:admin"], // Available roles for AI members

    // Agent configuration for AI members
    "agents": {
      "executor": "members.robot", // Agent responsible for executing tasks and handling work logic
      "planner": "members.mind", // Agent responsible for autonomous thinking and planning work
      "profiler": "members.profile" // Agent responsible for generating and optimizing member identity
    },

    // Email domain configurations for AI members
    "email_domains": [
      {
        "name": "Robot Email", // Display name for this configuration
        "messenger": "robot",
        "domain": "robot.yaobots.com",
        "prefix_min_length": 6, // Minimum length for email prefix
        "prefix_max_length": 20, // Maximum length for email prefix
        "reserved_words": ["robot", "yaobots", "/^robot/"], // Reserved/protected words
        "whitelist": {
          "domains": ["yaobots.com"],
          "senders": ["robot@yaobots.com"],
          "ips": ["0.0.0.0/0"]
        }
      },
      {
        "name": "Staff Email", // Display name for this configuration
        "messenger": "staff",
        "domain": "staff.yaobots.com",
        "prefix_min_length": 6,
        "prefix_max_length": 20,
        "reserved_words": ["admin", "staff", "support", "/^team/"],
        "whitelist": {
          "domains": ["staff.yaobots.com"],
          "senders": ["staff@yaobots.com"],
          "ips": ["0.0.0.0/0"]
        }
      }
    ],

    // Default settings for AI members
    "defaults": {
      "llm": "gpt-4-turbo", // Default LLM model (LLM list is provided by system API)
      "autonomous_mode": true, // Whether autonomous mode is enabled by default
      "cost_limit": 100 // Default daily cost limit (USD)
    }
  },

  // Invite config
  "invite": {
    "channel": "default",
    "expiry": "1d", // invitation link expiry: 8h, 1d, 20m, etc.
    "base_url": "http://localhost:8000/__yao_admin_root/team/invite/", // base URL for invitation links (empty means use current origin)
    "templates": {
      "mail": "en.invite_member", // mail template
      "sms": "en.invite_member" // sms template
    }
  }
}
